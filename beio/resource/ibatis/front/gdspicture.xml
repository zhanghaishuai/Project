<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gdspicture">
	
	<select id="queryShowPictureByGoodsIndex" parameterType="GoodsDetailVO" resultType="GdsPicture">
		SELECT 
		    *
		FROM
		    gds_picture
		WHERE
		    type = '0' AND enable = '1'
		        AND exist = '1'
		        AND detailsID = #{id}
		ORDER BY sort + '' ASC
		LIMIT 1;
	</select>
	
</mapper>