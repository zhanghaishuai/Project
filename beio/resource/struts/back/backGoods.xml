<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="backGoods" extends="beio-default" namespace="/backGoods">
	
		<!-- 查询品牌 -->
		<action name="pageBrand" class="backGoodsAction" method="pageBrand">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 保存品牌 -->
		<action name="saveBrand" class="backGoodsAction" method="saveBrand">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 删除品牌 -->
		<action name="delBrand" class="backGoodsAction" method="delBrand">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 向上品牌 -->
		<action name="upBrand" class="backGoodsAction" method="upBrand">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 向下品牌 -->
		<action name="downBrand" class="backGoodsAction" method="downBrand">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 查询分类 -->
		<action name="pageClassify" class="backGoodsAction" method="pageClassify">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 保存分类 -->
		<action name="saveClassify" class="backGoodsAction" method="saveClassify">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 删除分类 -->
		<action name="delClassify" class="backGoodsAction" method="delClassify">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 向上分类 -->
		<action name="upClassify" class="backGoodsAction" method="upClassify">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 向下分类 -->
		<action name="downClassify" class="backGoodsAction" method="downClassify">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		
	
	
	
	
	
		<!-- <interceptor-ref name="backStack"/> -->
		<!-- 后台分页查询商品信息 -->
		<action name="pageGoods" class="backGoodsAction" method="pageGoods">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 后台获取商品分类 -->
		<action name="getAllClassify" class="backGoodsAction" method="getAllClassify">
			<result name="json" type="json">
				<param name="root">jsonArray</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 后台获取品牌 -->
		<action name="getAllBrand" class="backGoodsAction" method="getAllBrand">
			<result name="json" type="json">
				<param name="root">jsonArray</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 增加商品 -->
		<action name="addGoods" class="backGoodsAction" method="addGoods">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 根据商品id获取商品信息 -->
		<action name="getGoodsByID" class="backGoodsAction" method="getGoodsByID">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 修改商品信息 -->
		<action name="updateGoods" class="backGoodsAction" method="updateGoods">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
				
		<!-- 启用/禁用商品 -->
		<action name="controlGoodsEnable" class="backGoodsAction" method="controlGoodsEnable">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 根据商品id获取商品图片 -->
		<action name="getGoodsImagesByID" class="backGoodsAction" method="getGoodsImagesByID">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 新增商品图片 -->
		<action name="addGoodsImage" class="backGoodsAction" method="addGoodsImage">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
				
		<!-- 修改商品图片信息 -->
		<action name="updateGoodsImage" class="backGoodsAction" method="updateGoodsImage">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
		<!-- 删除商品信息 -->
		<action name="delGoodsImage" class="backGoodsAction" method="delGoodsImage">
			<result name="json" type="json">
				<param name="root">backRoot</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>		
		
		
		
		<!-- 品牌管理 -->
		
		
		
		<!-- 分类管理 -->
		<!-- 获取全部分类 -->
		<action name="allClassify" class="backGoodsAction" method="allClassify">
			<result name="json" type="json">
				<param name="root">jsonArray</param>
			</result>
			<interceptor-ref name="backIdentityStack"/>
		</action>
		
	</package>
</struts>